@page
@using Microsoft.AspNetCore.Identity
@using Agil.Models
@model IndexModel
@inject SignInManager<User> _signInManager
@inject UserManager<User> _userManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home page";
    var user = _userManager.GetUserName(User);

}
@if (_signInManager.IsSignedIn(User))
{
    <form method="post" asp-controller="Home" asp-action="Items">
    <div class="card mb-3 mx-auto w-50 text-center" style="border-radius: 15px; width: 500px">
        <h3 style="margin-top: 25px; margin-bottom: 25px">
            Välkommen @user
        </h3>
        <div class="card-body text-center" style="margin: auto">
            <div class="text-center" style="border: solid; border-radius: 20px; width: 500px; margin-top: 25px; margin-bottom: 25px">
                <i class="fa fa-search" aria-hidden="true"></i>
                <input type="text" placeholder="Vad vill du söka efter?" style="border: none; width: 80%" name="searchString">
            </div>
            <div class="row justify-content-between">
                <select asp-for="Item.Place" class="form-select shadow-none border-secondary text-center" style="border-radius: 10px; width: 250px; margin-top: 25px; margin-bottom: 25px" name="location">
                    <option>*Hela Sverige*</option>
                    <option>Svealand</option>
                    <option>Götaland</option>
                    <option>Norrland</option>
                </select>
                <select asp-for="Item.Category" class="form-select shadow-none border-secondary text-center" style="border-radius: 10px; width: 250px; margin-top: 25px; margin-bottom: 25px" name="category">
                    <option>Alla kategorier</option>
                    <option>Jobb</option>
                    <option>Fordon</option>
                    <option>För hemmet</option>
                    <option>Bostad</option>
                    <option>Personligt</option>
                    <option>Elektronik</option>
                    <option>Fritid & hobby</option>
                    <option>Affärsverksamhet</option>
                    <option>Övrigt</option>
                </select>
            </div>
            <input style="margin-top: 25px; margin-bottom: 25px; border-radius: 15px" class="nav-link link-secondary me-auto d-inline-block border btn-color" type="submit" value="Hitta annons"/>
        </div>
    </div>
    </form>
}
else
{
    <div class="card mb-3 mx-auto text-center" style="border-radius: 15px; width: 800px">
        <h1 style="margin-top: 25px; margin-bottom: 25px;">Välkommen till Andreas köp & sälj</h1>
        <div>
            <p style="margin-top: 10px; margin-bottom: 15px">
                Detta är en hemsida för att snabbt och enkelt
                <br/>
                köpa och sälja ting över hela landet.
            </p>
        
            <p style="margin-top: 10px; margin-bottom: 15px">
                Är du ny hos oss?
                <br/>
                Bli gärna medlem och få tillgång till
                <br/>
                alla våra funktioner på sidan.
            </p>
        
            <p style="margin-top: 10px; margin-bottom: 15px; ">
                Registrera dig <a asp-area="Identity" asp-page="/Account/Register">här!</a>
            </p>
        
            <p style="margin-top: 10px; margin-bottom: 15px">
                Vill du bara kika lite på våra användares
                <br/>
                annonser så klicka <a asp-controller="Home" asp-action="Items">här!</a>
            </p>
        
            <p style="margin-top: 10px; margin-bottom: 15px">
                Hoppas du gillar sidan och att du får en fin 
                <br/>
                upplevelse.
            </p>
        
            <p style="margin-top: 10px; margin-bottom: 15px">
                Har du några frågor eller funderingar så tveka 
                <br/>
                inte att kontakta oss <a href="mailto:KopochSalj@live.com" title="glorythemes">här!</a>
            </p>
        
            <p style="margin-top: 10px; margin-bottom: 25px">
                MVH
                <br/>
                Vi på Andreas köp & sälj AB
            </p>
        </div>
    </div>

    }






